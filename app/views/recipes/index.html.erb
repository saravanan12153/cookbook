<main>

  <%= render 'shared/header', title: 'Recipes' %>

  <%= div_for @recipes, class: 'row article' do |recipe| %>

    <div class="col-md-2">

      <%= div_for recipe.chef, class: 'chef-info text-center' do %>

        <%= gravatar_for recipe.chef, size: 100 %>
        <h5><%= recipe.chef.name %></h5>

      <% end %>

    </div>

    <%= div_for recipe, class: 'col-lg-10 well' do %>

      <h4>
        <%= link_to recipe.name, recipe_path(recipe) %>
        <%= image_tag recipe.picture.url, size: '200x150', class: 'gravatar pull-right' if recipe.picture? %>
      </h4>
      <%= simple_format recipe.summary %>
      <div style="clear: right"></div>
      <p class="pull-right"><small><%= time_ago_in_words recipe.created_at %> ago</small></p>

    <% end %>

  <% end %>

  <div id="fab">

    <label class="text-capitalize">Add a Recipe</label>
    <%= link_to new_recipe_path, class: 'btn btn-primary', alt: 'Add a Recipe' do %>

      <i class="glyphicon glyphicon-plus"></i>

    <% end %>

  </div>

</main>